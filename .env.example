# ================================
# ====== 全域配置 ======
# ================================
# 環境：development, staging, production
ENVIRONMENT=development

# 日誌等級：debug, info, warn, error
LOG_LEVEL=info

# ================================
# ====== 後端服務配置 ======
# ================================

# ====== 服務基礎配置 ======
ENVIRONMENT=development
LOG_LEVEL=info
PORT=8080

# ====== TON 區塊鏈配置 ======
# TON API 端點 (testnet/mainnet)
TON_API_ENDPOINT=https://testnet.toncenter.com/api/v2/
TON_NETWORK=testnet

# ====== 智能合約地址 ======
# 抽獎合約地址 (測試用)
LOTTERY_CONTRACT_ADDRESS=

# NFT 合約地址 (測試用)  
NFT_CONTRACT_ADDRESS=

# ====== 錢包配置 ======
# 測試用私鑰
WALLET_PRIVATE_KEY=

# ====== 抽獎參數配置 ======
# 抽獎間隔
DRAW_INTERVAL=1m

# 參與人數限制
MAX_PARTICIPANTS=3
MIN_PARTICIPANTS=1

# 參與費用 (TON)
ENTRY_FEE_TON=0.01

# 是否自動抽獎
AUTO_DRAW=true

# ====== 重試機制配置 ======
RETRY_COUNT=3
RETRY_DELAY=5s