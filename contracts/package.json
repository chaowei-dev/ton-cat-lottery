{
  "name": "ton-cat-lottery-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for TON Cat Lottery dApp",
  "main": "build/CatLottery.compiled.json",
  "scripts": {
    "build": "tact --config ./tact.config.json",
    "test": "jest tests/CatLottery.test.ts",
    "test:all": "jest",
    "test:watch": "jest --watch",
    "verify": "npx tsx scripts/verify.ts",
    "deploy": "npx blueprint deploy",
    "deploy:testnet": "npx blueprint deploy --testnet",
    "deploy:mainnet": "npx blueprint deploy --mainnet",
    "deploy:custom": "ts-node scripts/deploy.ts --network testnet",
    "interact": "npx tsx scripts/interact.ts"
  },
  "dependencies": {
    "@tact-lang/compiler": "^1.6.5"
  },
  "devDependencies": {
    "@ton/blueprint": "^0.38.0",
    "@ton/core": "^0.61.0",
    "@ton/crypto": "^3.3.0",
    "@ton/sandbox": "^0.35.0",
    "@ton/test-utils": "^0.9.0",
    "@ton/ton": "^15.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "tsx": "^4.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
