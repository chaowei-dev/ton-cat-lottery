{
  "name": "ton-cat-lottery-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for TON Cat Lottery dApp",
  "main": "build/CatLottery.compiled.json",
  "scripts": {
    "build": "tact --config ./tact.config.json",
    "test": "jest tests/CatLottery.test.ts",
    "test:all": "jest",
    "test:watch": "jest --watch",
    "verify": "npx tsx scripts/verify.ts",
    "deploy:testnet": "ts-node scripts/deploy.ts --network testnet",
    "deploy:mainnet": "ts-node scripts/deploy.ts --network mainnet"
  },
  "dependencies": {
    "@tact-lang/compiler": "1.4.4"
  },
  "devDependencies": {
    "@ton/core": "0.56.3",
    "@ton/crypto": "3.2.0",
    "@ton/sandbox": "0.15.0",
    "@ton/test-utils": "0.4.2",
    "@ton/ton": "13.11.2",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
